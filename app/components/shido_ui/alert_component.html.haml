%article.message{ class: "is-#{@type} #{fade_out} #{fade_in}", 
  data: { turbo_temporary: true, controller: 'alert-component', 'alert-component-auto-close-value': "#{@auto_close}" } }
  .message-header
    = @message&.html_safe
    %button.delete{ 'aria-label': "delete", data: { action: 'click->alert-component#close' }}
  - if content.present?
    .message-body= content
